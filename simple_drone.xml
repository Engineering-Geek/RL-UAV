<mujoco model="Simple UAV">
  <compiler inertiafromgeom="true"/>

  <option timestep="0.01" gravity="0 0 -9.81" iterations="50" integrator="RK4"/>

  <default>
    <joint damping="1"/>
    <geom friction="1 0.5 0.5" mass="0" margin="0.01"/>
    <motor ctrllimited="true" ctrlrange="0.0 1.0"/>
  </default>

  <worldbody>
    <body name="uav" pos="0 0 0">
      <freejoint/>
      <geom name="base" type="box" size="0.1 0.1 0.02" mass="1"/>

      <!-- Propellers as separate bodies for more accurate simulation -->
      <body name="prop1" pos="-0.1 0.1 0.02">
        <joint name="prop1_joint" type="hinge" axis="0 0 1" limited="false"/>
        <geom name="prop1_geom" type="cylinder" size="0.05 0.01" mass="0.1"/>
        <site name="prop1_thrust" pos="0 0 0.05"/>
      </body>
      <body name="prop2" pos="0.1 0.1 0.02">
        <joint name="prop2_joint" type="hinge" axis="0 0 1" limited="false"/>
        <geom name="prop2_geom" type="cylinder" size="0.05 0.01" mass="0.1"/>
        <site name="prop2_thrust" pos="0 0 0.05"/>
      </body>
      <body name="prop3" pos="-0.1 -0.1 0.02">
        <joint name="prop3_joint" type="hinge" axis="0 0 1" limited="false"/>
        <geom name="prop3_geom" type="cylinder" size="0.05 0.01" mass="0.1"/>
        <site name="prop3_thrust" pos="0 0 0.05"/>
      </body>
      <body name="prop4" pos="0.1 -0.1 0.02">
        <joint name="prop4_joint" type="hinge" axis="0 0 1" limited="false"/>
        <geom name="prop4_geom" type="cylinder" size="0.05 0.01" mass="0.1"/>
        <site name="prop4_thrust" pos="0 0 0.05"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="motor1" joint="prop1_joint" gear="1"/>
    <motor name="motor2" joint="prop2_joint" gear="1"/>
    <motor name="motor3" joint="prop3_joint" gear="1"/>
    <motor name="motor4" joint="prop4_joint" gear="1"/>
  </actuator>
</mujoco>
